{
  "name": "thedeck",
  "version": "1.0.4",
  "author": "Me",
  "description": "something",
  "private": true,
  "main": "./electron/main.js",
  "homepage": "./",
  "build": {
    "asar": true,
    "extends": null,
    "appId": "com.macrodeck",
    "mac": {
      "category": "your.app.category.type"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "draft"
      }
    ]
  },
  "resolve": {
    "fallback": {
      "buffer": "resolve.require('buffer')"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": -1000
      }
    },
    "coverageReporters": [
      "text",
      "json",
      "html"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "buffer": "^6.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.3"
  },
  "scripts": {
    "both": "concurrently \"npm start\" \"env APP_DEV=true electron .\"",
    "chill": "run-s start build",
    "build": "react-scripts build",
    "dev": "env APP_DEV=true electron .",
    "dist": "electron-builder",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "npm rebuild --runtime=electron --target=17.0.1 --disturl=https://atom.io/download/atom-shell --abi=101",
    "rebuilder": ".\\node_modules\\.bin\\electron-rebuild.cmd",
    "rebuildRobot": "electron-rebuild -f -w robotjs",
    "start": "react-scripts start .",
    "test": "react-scripts test --coverage",
    "tester": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.20",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.5",
    "electron-rebuild": "^3.2.7"
  }
}
